#!/usr/bin/env ruby

require_relative 'fetch_application_logs'

marathon_application_id = ARGV[0]
host = ENV.fetch('HOST', '')
file = ARGV[1] || 'stdout'
data_length = ENV.fetch('DATA_LENGTH', '50000').to_i

FetchApplicationLogs.call(host: host,
                          application_id: marathon_application_id,
                          file: file,
                          data_length: data_length)
